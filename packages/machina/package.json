{
    "name": "machina",
    "version": "6.0.0",
    "description": "Focused finite state machines for JavaScript and TypeScript. States in, states out.",
    "author": "Jim Cowart (http://ifandelse.com)",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "engines": {
        "node": ">=22.22"
    },
    "sideEffects": false,
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "lint": "ESLINT_USE_FLAT_CONFIG=false eslint --config ../../.eslintrc.js 'src/**/*.{ts,tsx}'"
    },
    "devDependencies": {
        "eslint": "^9.39.2",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.6",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    }
}
