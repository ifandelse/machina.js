{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "."
    },
    "include": ["packages/*/src/**/*"],
    "exclude": ["node_modules", "dist", ".eslintrc.js", "jest.config.js"]
}
